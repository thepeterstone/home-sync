[user]
	name = Peter Stone
	email = thepeterstone@gmail.com

[core]
	excludesfile = $HOME/.cvsignore
	autocrlf = input

[alias]
  blog="log origin/master... --left-right"
  br=branch
  ci = commit --verbose
  co = checkout
  conflicts = ls-files --unmerged
  dc=diff --cached
  di=diff
  ds="diff --staged"
  fixup="commit --fixup"
  ff="pull --ff-only"
  flog="log --pretty=fuller --decorate"
  llog="log --date=local"
  lol="log --graph --decorate --oneline"
  lola="log --graph --decorate --oneline --all"
  root = rev-parse --show-toplevel
  rum="rebase master@{u}"
  squash="commit --squash"
  st = status
  sta=stash
  sur="submodule update --init --recursive"
  unstage="reset HEAD"
  pr = "!f() { git fetch $1 refs/pull-requests/$2/merge:pr-$2; git checkout pr-$2; } ; f"
  prettylog =  log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
  root = rev-parse --show-toplevel
  rum="rebase master@{u}"
  squash="commit --squash"
  st = status
  sta=stash
  sur="submodule update --init --recursive"
  unstage="reset HEAD"

[color]
	interactive = always
	ui = auto

[grep]
	lineNumber = true

[rebase]
	stat = true

[push]
	default = simple
[fetch]
	prune = true

[init]
	defaultBranch = main
[pull]
	ff = only
